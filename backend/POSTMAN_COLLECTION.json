{
	"info": {
		"name": "CloudEwork API",
		"description": "Complete API collection for CloudEwork CrossFit Management",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000/api/v1"
		},
		{
			"key": "auth_token",
			"value": ""
		},
		{
			"key": "athlete_id",
			"value": ""
		},
		{
			"key": "workout_id",
			"value": ""
		}
	],
	"item": [
		{
			"name": "1. Authentication",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						}
					}
				},
				{
					"name": "Login Demo Coach",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"auth_token\", jsonData.data.token);"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"demo@cloudework.com\",\n  \"password\": \"demo123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/login",
							"host": ["{{base_url}}"],
							"path": ["login"]
						}
					}
				},
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/me",
							"host": ["{{base_url}}"],
							"path": ["me"]
						}
					}
				},
				{
					"name": "Register New Coach",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"newcoach@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\",\n  \"first_name\": \"New\",\n  \"last_name\": \"Coach\",\n  \"phone\": \"+506-1234-5678\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/register/coach",
							"host": ["{{base_url}}"],
							"path": ["register", "coach"]
						}
					}
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{base_url}}/logout",
							"host": ["{{base_url}}"],
							"path": ["logout"]
						}
					}
				}
			]
		},
		{
			"name": "2. Athletes",
			"item": [
				{
					"name": "List Athletes",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/athletes?per_page=10",
							"host": ["{{base_url}}"],
							"path": ["athletes"],
							"query": [{"key": "per_page", "value": "10"}]
						}
					}
				},
				{
					"name": "Search Athletes",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/athletes?search=maria&status=active",
							"host": ["{{base_url}}"],
							"path": ["athletes"],
							"query": [
								{"key": "search", "value": "maria"},
								{"key": "status", "value": "active"}
							]
						}
					}
				},
				{
					"name": "Create Athlete",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"pm.environment.set(\"athlete_id\", jsonData.data.athlete.id);"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"newathlete@example.com\",\n  \"password\": \"password123\",\n  \"first_name\": \"Test\",\n  \"last_name\": \"Athlete\",\n  \"phone\": \"+506-9999-9999\",\n  \"date_of_birth\": \"1995-05-15\",\n  \"gender\": \"male\",\n  \"height_cm\": 175,\n  \"weight_kg\": 75,\n  \"goals\": \"Improve strength and conditioning\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/athletes",
							"host": ["{{base_url}}"],
							"path": ["athletes"]
						}
					}
				},
				{
					"name": "Get Athlete Details",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/athletes/1",
							"host": ["{{base_url}}"],
							"path": ["athletes", "1"]
						}
					}
				},
				{
					"name": "Update Athlete",
					"request": {
						"method": "PUT",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"weight_kg\": 76,\n  \"goals\": \"Prepare for CrossFit Open 2026\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/athletes/1",
							"host": ["{{base_url}}"],
							"path": ["athletes", "1"]
						}
					}
				},
				{
					"name": "Delete Athlete",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/athletes/{{athlete_id}}",
							"host": ["{{base_url}}"],
							"path": ["athletes", "{{athlete_id}}"]
						}
					}
				}
			]
		},
		{
			"name": "3. Workouts",
			"item": [
				{
					"name": "List Workouts",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/workouts",
							"host": ["{{base_url}}"],
							"path": ["workouts"]
						}
					}
				},
				{
					"name": "Get Benchmarks",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/benchmarks?category=girl",
							"host": ["{{base_url}}"],
							"path": ["benchmarks"],
							"query": [{"key": "category", "value": "girl"}]
						}
					}
				},
				{
					"name": "Search Workouts",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/workouts?search=fran&workout_type=benchmark",
							"host": ["{{base_url}}"],
							"path": ["workouts"],
							"query": [
								{"key": "search", "value": "fran"},
								{"key": "workout_type", "value": "benchmark"}
							]
						}
					}
				},
				{
					"name": "Create Custom Workout",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"My Custom WOD\",\n  \"description\": \"5 rounds for time: 10 burpees, 15 air squats, 20 sit-ups\",\n  \"workout_type\": \"metcon\",\n  \"difficulty_level\": \"intermediate\",\n  \"estimated_duration_minutes\": 15,\n  \"workout_structure\": {\n    \"format\": \"for_time\",\n    \"rounds\": 5,\n    \"movements\": [\n      {\"name\": \"Burpees\", \"reps\": 10},\n      {\"name\": \"Air Squats\", \"reps\": 15},\n      {\"name\": \"Sit-ups\", \"reps\": 20}\n    ]\n  },\n  \"equipment_needed\": [],\n  \"tags\": [\"bodyweight\", \"conditioning\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/workouts",
							"host": ["{{base_url}}"],
							"path": ["workouts"]
						}
					}
				},
				{
					"name": "Get Workout Details",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/workouts/1",
							"host": ["{{base_url}}"],
							"path": ["workouts", "1"]
						}
					}
				}
			]
		},
		{
			"name": "4. Assignments",
			"item": [
				{
					"name": "List Assignments",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/assignments",
							"host": ["{{base_url}}"],
							"path": ["assignments"]
						}
					}
				},
				{
					"name": "Get Calendar View",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/calendar?start_date=2026-01-20&end_date=2026-01-26",
							"host": ["{{base_url}}"],
							"path": ["calendar"],
							"query": [
								{"key": "start_date", "value": "2026-01-20"},
								{"key": "end_date", "value": "2026-01-26"}
							]
						}
					}
				},
				{
					"name": "Assign Workout to Athlete",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"workout_id\": 1,\n  \"athlete_id\": 1,\n  \"scheduled_date\": \"2026-01-21\",\n  \"notes\": \"Focus on form, not speed\",\n  \"priority\": \"high\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/assignments",
							"host": ["{{base_url}}"],
							"path": ["assignments"]
						}
					}
				},
				{
					"name": "Bulk Assign Workout",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"workout_id\": 1,\n  \"athlete_ids\": [1, 2, 3],\n  \"scheduled_date\": \"2026-01-22\",\n  \"notes\": \"Team workout!\",\n  \"priority\": \"medium\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/assignments/bulk",
							"host": ["{{base_url}}"],
							"path": ["assignments", "bulk"]
						}
					}
				}
			]
		},
		{
			"name": "5. Results",
			"item": [
				{
					"name": "List Results",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/results?athlete_id=1",
							"host": ["{{base_url}}"],
							"path": ["results"],
							"query": [{"key": "athlete_id", "value": "1"}]
						}
					}
				},
				{
					"name": "Submit Result",
					"request": {
						"method": "POST",
						"header": [{"key": "Content-Type", "value": "application/json"}],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"assignment_id\": 1,\n  \"completed_at\": \"2026-01-20 10:30:00\",\n  \"time_seconds\": 285,\n  \"rx_or_scaled\": \"rx\",\n  \"feeling_rating\": 4,\n  \"notes\": \"Great workout! Felt strong today.\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/results",
							"host": ["{{base_url}}"],
							"path": ["results"]
						}
					}
				},
				{
					"name": "Get Workout History",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/results/workout/1/history?athlete_id=1",
							"host": ["{{base_url}}"],
							"path": ["results", "workout", "1", "history"],
							"query": [{"key": "athlete_id", "value": "1"}]
						}
					}
				},
				{
					"name": "Get Personal Records",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/personal-records?athlete_id=1",
							"host": ["{{base_url}}"],
							"path": ["personal-records"],
							"query": [{"key": "athlete_id", "value": "1"}]
						}
					}
				}
			]
		},
		{
			"name": "6. Analytics",
			"item": [
				{
					"name": "Get Dashboard KPIs",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/analytics/dashboard",
							"host": ["{{base_url}}"],
							"path": ["analytics", "dashboard"]
						}
					}
				},
				{
					"name": "Get Athlete Progress",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/analytics/athlete/1/progress?period=3months",
							"host": ["{{base_url}}"],
							"path": ["analytics", "athlete", "1", "progress"],
							"query": [{"key": "period", "value": "3months"}]
						}
					}
				},
				{
					"name": "Get Workout Leaderboard",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/analytics/workout/1/leaderboard?rx_or_scaled=rx",
							"host": ["{{base_url}}"],
							"path": ["analytics", "workout", "1", "leaderboard"],
							"query": [{"key": "rx_or_scaled", "value": "rx"}]
						}
					}
				}
			]
		}
	]
}
